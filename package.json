{
  "name": "nexus-rag",
  "version": "1.0.0",
  "description": "Backend RAG handler for Note Nexus",
  "homepage": "https://github.com/imseano/nexus-rag#readme",
  "bugs": {
    "url": "https://github.com/imseano/nexus-rag/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imseano/nexus-rag.git"
  },
  "license": "MIT",
  "author": "Sean Oreta",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.node.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint .",
    "test": "vitest run unit --config __tests__/vitest.config.ts",
    "test:coverage": "vitest run unit --config __tests__/vitest.config.ts --coverage.enabled --coverage.all",
    "prettier": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prettier:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "test:watch": "vitest unit"
  },
  "devDependencies": {
    "@eslint/js": "~9.17",
    "@types/eslint__js": "~8.42",
    "@types/node": "~20",
    "@typescript-eslint/parser": "~8.19",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/eslint-plugin": "~1.1",
    "dotenv": "^16.4.7",
    "eslint": "~9.17",
    "eslint-config-prettier": "~9.1",
    "globals": "~15.14",
    "prettier": "~3.4",
    "rimraf": "~6.0",
    "ts-api-utils": "~2.0",
    "typescript": "~5.7",
    "typescript-eslint": "~8.19",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@langchain/core": "^0.3.43",
    "@langchain/openai": "^0.5.4",
    "langchain": "^0.3.20"
  }
}
